@page "/overridden"

<CascadingValue Name="CascadedValue" Value=@CascadedValue>
    <CascadingValue Name="ValueToOverride" Value=@OuterValue>
        <h2>First level</h2>
        <ViewValue />

        <CascadingValue Name="ValueToOverride" Value=@InnerValue>
            <h2>Second level</h2>
            <ViewValue />
        </CascadingValue>

        <h2>Back to first level</h2>
        <ViewValue />

    </CascadingValue>
</CascadingValue>


@code {
    private string CascadedValue = "CascadedValue";
    private string OuterValue = "Outer value"; 
    private string InnerValue = "Inner value"; 
}
